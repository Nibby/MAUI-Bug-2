<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.PushedPage">
    <ContentPage.Content>
        <VerticalStackLayout>
            <Label
                Text="Now background (deactivate) the app"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="20"
                HorizontalOptions="Center" />
        
            <Label
                Text="After receiving the deactivation event, the app will attempt to pop this page on the main thread"
                FontSize="14"
                HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>